<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#131212"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:id="@+id/num1"
            android:textAlignment="textEnd"
            android:background="#FFFFFF"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingLeft="0dp"
            android:paddingRight="0dp"

            >

            <Button
                android:id="@+id/btn1"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"

                android:layout_weight="1"
                android:background="#8CE4F0"
                android:text="C" />

            <Button

                android:id="@+id/btn2"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#8CE4F0"
                android:text="( )" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#8CE4F0"
                android:text="%" />

            <Button
                android:id="@+id/btn4"

                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:background="#41A1F5"
                android:text="DEL" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingRight="0dp"
            android:paddingLeft="0dp"

            >
            <Button
                android:id="@+id/btn5"
                android:layout_width="83dp"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:layout_height="83dp"
                android:text="7"/>
            <Button

                android:layout_weight="1"
                android:layout_width="83dp"
                android:id="@+id/btn6"
                android:layout_marginRight="1dp"
                android:background="#ffffff"

                android:text="8"
                android:layout_height="83dp" />
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="9"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:id="@+id/btn7"
                android:layout_weight="1"/>
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="+"
                android:background="#41A1F5"
                android:id="@+id/btn8"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingRight="0dp"
            android:paddingLeft="0dp"

            >
            <Button
                android:id="@+id/btn9"
                android:layout_width="83dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_height="83dp"
                android:text="4"/>
            <Button

                android:layout_weight="1"
                android:layout_width="83dp"
                android:id="@+id/btn10"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:text="5"
                android:layout_height="83dp" />
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="6"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:id="@+id/btn11"
                android:layout_weight="1"/>
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="-"
                android:id="@+id/btn12"
                android:background="#41A1F5"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingRight="0dp"
            android:paddingLeft="0dp"

            >
            <Button
                android:id="@+id/btn13"
                android:layout_width="83dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_height="83dp"
                android:text="1"/>
            <Button

                android:layout_weight="1"
                android:layout_width="83dp"
                android:id="@+id/btn14"
                android:text="2"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_height="83dp" />
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="3"
                android:id="@+id/btn15"
                android:background="#ffffff"
                android:layout_marginRight="1dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="*"
                android:background="#41A1F5"
                android:id="@+id/btn16"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingRight="0dp"
            android:paddingLeft="0dp"

            >
            <Button
                android:id="@+id/btn17"
                android:layout_width="83dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_marginRight="1dp"
                android:layout_height="83dp"
                android:text="."/>
            <Button

                android:layout_weight="1"
                android:layout_width="83dp"
                android:id="@+id/btn18"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:text="0"
                android:layout_height="83dp" />
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="/"
                android:background="#ffffff"
                android:id="@+id/btn19"
                android:layout_marginRight="1dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:text="="
                android:background="#41A1F5"
                android:id="@+id/btn20"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>